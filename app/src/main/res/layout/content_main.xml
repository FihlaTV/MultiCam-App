<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnCreateProject"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_create_project"
            android:onClick="btnCreateProject"
            android:textSize="15dp"
            android:text="New Project"
            android:textColor="#FFFBF4"/>
        <Button
            android:onClick="btnPreviousProject"
            android:textSize="15dp"
            android:text="Previous Project"
            android:textColor="#FFFBF4"
            android:drawableTop="@drawable/ic_previous_project"
            android:layout_margin="10dp"
            android:id="@+id/btnPreviousProject"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@color/colorPrimary"

            />
        <Button
            android:onClick="btnListOfMergedVideos"
            android:textSize="15dp"
            android:text="Merged Videos"
            android:textColor="#FFFBF4"
            android:drawableTop="@drawable/ic_list_of_merged_videos"
            android:layout_marginStart="10dp"
            android:id="@+id/btnListOfMergedVideos"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@color/colorPrimary"

            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>