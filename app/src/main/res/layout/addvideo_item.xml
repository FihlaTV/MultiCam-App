<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/addVideo_video_item"
        android:layout_width="135dp"
        android:layout_height="79dp"
        android:padding="2dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_toRightOf="@id/addVideo_video_item"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Video 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/msLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@id/addVideo_video_item"
        android:text="Start Time ms: "

        />

    <TextView
        android:layout_below="@id/name"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/msLabel"
        android:text="0.1"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/item_addTime"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_add_white"
            android:onClick="buttonAddTime" />

        <Button

            android:id="@+id/item_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_delete_white" />


    </LinearLayout>

</RelativeLayout>
